{% extends "backOffice/base.html.twig" %} {% block title %} List Produit {%
endblock %} {% block content %}
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div
        class="d-flex flex-wrap align-items-center justify-content-between mb-4"
      >
        <div>
          <h4 class="mb-3">Liste des produits</h4>
        </div>
        <a href="{{ path('add_produit') }}" class="btn btn-primary add-list">
          <i class="las la-plus mr-3"></i>Ajout Produit
        </a>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="table-responsive rounded mb-3">
        <table class="data-tables table mb-0 tbl-server-info">
          <thead class="bg-white text-uppercase">
            <tr class="ligth ligth-data">
              <th>Produit</th>
              <th>Nom</th>
              <th>Description</th>
              <th>Quantite</th>
              <th>Point de recyclage</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody class="ligth-body">
            {% for produit in produits %}
            <tr>
              <td>
                <div class="d-flex align-items-center">
                  <img
                    src="{{ asset('uploads/images/' ~ produit.image) }}"
                    class="img-fluid rounded avatar-50 mr-3"
                    alt="image"
                  />
                  <div>
                    {{ produit.name }}
                  </div>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <div>
                    {{ produit.name }}
                  </div>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <div>
                    {{ produit.description }}
                  </div>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <div>
                    {{ produit.getPointderecyclage().name }}
                  </div>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <div>
                    {{ produit.quantite }}
                  </div>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center list-action">
                  <a
                    class="badge bg-success mr-2"
                    data-toggle="tooltip"
                    data-placement="top"
                    title=""
                    data-original-title="Edit"
                    href="{{ path('edit_produit', { id: produit.id }) }}"
                  >
                    <i class="ri-pencil-line mr-0"></i>
                  </a>
                  <a
                    class="badge bg-warning mr-2"
                    data-toggle="tooltip"
                    data-placement="top"
                    title=""
                    data-original-title="Delete"
                    href="{{ path('delete_produit', { id: produit.id }) }}"
                  >
                    <i class="ri-delete-bin-line mr-0"></i>
                  </a>
                </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- Page end  -->
</div>
{% endblock %}
