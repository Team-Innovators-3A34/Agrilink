{% extends "backOffice/base.html.twig" %} {% block title %}Update User{%
endblock %} {% block content %}
<div class="container-fluid add-form-list">
  <div class="row">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between">
          <div class="header-title">
            <h4 class="card-title">Update User</h4>
          </div>
        </div>
        <div class="card-body">
          {{ form_start(form) }}
          <form data-toggle="validator">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Nom *</label>
                  {{
                    form_widget(form.nom, {
                      attr: {
                        class: "form-control",
                      }
                    })
                  }}
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>Prenom *</label>
                  {{
                    form_widget(form.prenom, {
                      attr: {
                        class: "form-control",
                      }
                    })
                  }}
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>Telephone *</label>
                  {{
                    form_widget(form.telephone, {
                      attr: {
                        class: "form-control",
                      }
                    })
                  }}
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>Address *</label>
                  {{
                    form_widget(form.adresse, {
                      attr: {
                        class: "form-control",
                      }
                    })
                  }}
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label>Description</label>
                  {{
                    form_widget(form.description, {
                      attr: {
                        class: "form-control",
                      }
                    })
                  }}
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label>Email *</label>
                  {{
                    form_widget(form.email, {
                      attr: {
                        class: "form-control",
                      }
                    })
                  }}
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label>Bio *</label>
                  {{
                    form_widget(form.bio, {
                      attr: {
                        class: "form-control",
                      }
                    })
                  }}
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              {{
                form_widget(form.image, {
                  attr: {
                    type: "hidden",
                    class: "d-none"
                  }
                })
              }}
            </div>
            <button type="submit" class="btn btn-primary mr-2">
              Update User
            </button>
            <button type="reset" class="btn btn-danger">Reset</button>
            {{ form_end(form) }}
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Page end  -->
</div>
{% endblock %}
