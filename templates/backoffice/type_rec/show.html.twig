{% extends 'backOffice/base.html.twig' %}

{% block title %}Détails du Type{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <!-- Section d'en-tête -->
        <div class="col-lg-12">
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Détails du Type</h4>
                    <p class="mb-0">
                        La liste des types permet de gérer efficacement les différentes catégories et d'organiser les données de manière structurée.
                    </p>
                </div>
                <a href="{{ path('app_type_rec_new') }}" class="btn btn-primary add-list">
                    <i class="las la-plus mr-3"></i>Ajouter un Type
                </a>
            </div>
        </div>
        <!-- Section des détails -->
        <div class="col-lg-12">
            <div class="type-details-container">
                <h1 class="type-title">Détails du Type</h1>
                <div class="type-details">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Nom :</th>
                                <td>{{ type_rec.nom }}</td>
                            </tr>
                            <tr>
                                <th>Description :</th>
                                <td>{{ type_rec.description }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br>
                <!-- Section des actions -->
                <div class="form-actions">
                    <a href="{{ path('app_type_rec_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    <a href="{{ path('app_type_rec_edit', {'id': type_rec.id}) }}" class="btn btn-primary">Modifier</a>
                    <form method="post" action="{{ path('app_type_rec_delete', {'id': type_rec.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type_rec.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
