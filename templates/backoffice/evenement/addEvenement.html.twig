{% extends "backOffice/base.html.twig" %} {% block title %} Add Event {%
endblock %} {% block content %}
<div class="container-fluid add-form-list">
  <div class="row">
    <div class="col-sm-7">
      <div class="card">
        <div class="card-header d-flex justify-content-between">
          <div class="header-title">
            <h4 class="card-title">Add Event</h4>
          </div>
        </div>
        <div class="card-body">
          {{form_start(form,{'attr':{'novalidate': 'novalidate'}})}}
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label>Event Type *</label>
                {{ form_widget(form.categorie, {'attr': {'class': 'selectpicker form-control', 'data-style': 'py-0'
                }}) }}
                <div class="text-danger">
                  {{ form_errors(form.categorie) }}
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                {{ form_label(form.nom, "Nom de l'événement") }}
                {{ form_widget(form.nom, { attr: { class: "form-control" } }) }}
                <div class="text-danger">
                  {{ form_errors(form.nom) }}
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Address *</label>
                {{ form_widget(form.adresse) }}
                <div class="text-danger">
                  {{ form_errors(form.adresse) }}
                </div>
                <div class="help-block with-errors"></div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label>Longitude *</label>
                {{ form_widget(form.longitude) }}
                <div class="text-danger">
                  {{ form_errors(form.longitude) }}
                </div>
                <div class="help-block with-errors"></div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Latitude *</label>
                {{ form_widget(form.latitude) }}
                <div class="text-danger">
                  {{ form_errors(form.latitude) }}
                </div>
                <div class="help-block with-errors"></div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label>Event Date *</label>
                {{ form_widget(form.date) }}
                <div class="text-danger">
                  {{ form_errors(form.date) }}
                </div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label>Max Number Of Places *</label>
                {{ form_widget(form.nbr_places) }}
                <div class="text-danger">
                  {{ form_errors(form.nbr_places) }}
                </div>
                <div class="help-block with-errors"></div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label>Image</label>
                {{ form_widget(form.image) }}
                <div class="text-danger">
                  {{ form_errors(form.image) }}
                </div>
                {% if form.image %}
                <p>Image actuelle :</p>
                <img
                  src="{{ asset('uploads/images/' ~ form.vars.value.image) }}"
                  alt="Image de l'événement"
                  width="150"
                />
                {% endif %}
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label>Description / Event Details</label>
                {{ form_widget(form.description) }}
                <div class="text-danger">
                  {{ form_errors(form.description) }}
                </div>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary mr-2">Add Event</button>
          {#<button type="reset" class="btn btn-danger">Reset</button>#}
          {{ form_end(form) }}
        </div>
      </div>
    </div>
    <div class="col-sm-5">
      <p></p>
    </div>
  </div>
  <!-- Page end  -->
</div>
{% endblock %}
