{% extends "frontOffice/base.html.twig" %} {% block title %} {% if
(action=="edit") %} Modifier {% else %} Ajouter {% endif %} Produit{% endblock
%} {% block content %}
<div class="main-content bg-lightblue theme-dark-bg right-chat-active">
  <div class="middle-sidebar-bottom">
    <div class="middle-sidebar-left">
      <div class="middle-wrap">
        <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
          <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-3">
            <a
              href="{{ path('display_point_front') }}"
              class="d-inline-block mt-2"
            >
              <i class="ti-arrow-left font-sm text-white"></i>
            </a>
            <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">
              {% if (action=="edit") %} Modifier {% else %} Ajouter {% endif %}
              Produit
            </h4>
          </div>
          <div class="card-body p-lg-5 p-4 w-100 border-0">
            {# Affichage des messages Flash, par exemple en cas de succès #} {%
            for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
            {% endfor %} {# Début du formulaire Symfony #}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="row">
              <div class="col-lg-12 mb-3">
                <div class="form-group">
                  {{ form_label(form.name) }}
                  {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'nom du produit'

                  }}) }}
                  {{ form_errors(form.name) }}
                </div>
              </div>

              <div class="col-lg-12 mb-3">
                <div class="form-group">
                  {{ form_label(form.quantite) }}
                  {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'placeholder': 'Quantite du produit'

                  }}) }}
                  {{ form_errors(form.quantite) }}
                </div>
              </div>

              <div class="col-lg-12 mb-3">
                <div class="form-group">
                  {{ form_label(form.description) }}
                  {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'description du produit', 'rows': 3

                  }}) }}
                  {{ form_errors(form.description) }}
                </div>
              </div>

              <div class="col-lg-12 mb-3">
                <div class="form-group">
                  {{ form_label(form.image) }}
                  {{ form_widget(form.image, {'attr': {'class': 'form-control'

                  }}) }}
                  {{ form_errors(form.image) }}
                </div>
              </div>
            </div>
            <div class="col-lg-12 mb-3" style="display: none;">
              <div class="form-group">
              <label>Point de recyclage *</label>
              {{ form_widget(form.pointderecyclage, {'attr': {'class': 'selectpicker form-control', 'data-style': 'py-0'}}) }}
              {{ form_errors(form.pointderecyclage) }}
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12 mb-0">
                <button
                  type="submit"
                  class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-3 d-inline-block"
                  style="margin-top: 10px"
                >
                  Confirmer
                </button>
              </div>
            </div>

            {{ form_end(form) }}
            {# Fin du formulaire Symfony #}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
