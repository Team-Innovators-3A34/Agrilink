{% for article in news %}
    <div class="news-item">
        <h2><a href="{{ article.url }}" target="_blank">{{ article.title }}</a></h2>
        {% if article.thumbnail %}
            <img src="{{ article.thumbnail }}" alt="{{ article.title }}" class="news-image" />
        {% endif %}
        <p>{{ article.excerpt }}</p>
        <p class="date"><strong>Date:</strong> {{ article.date | date("Y-m-d H:i:s") }}</p>
    </div>
{% endfor %}
