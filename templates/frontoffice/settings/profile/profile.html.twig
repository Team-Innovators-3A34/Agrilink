{% extends "frontoffice/base.html.twig" %} {% block content %}
<div class="main-content bg-lightblue theme-dark-bg right-chat-active">
  <div class="middle-sidebar-bottom">
    <div class="middle-sidebar-left">
      <div class="middle-wrap">
        <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
          <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-3">
            <a href="{{ path('app_settings') }}" class="d-inline-block mt-2"
              ><i class="ti-arrow-left font-sm text-white"></i
            ></a>
            <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">
              Account Details
            </h4>
          </div>
          <div class="card-body p-lg-5 p-4 w-100 border-0">
            <div class="row justify-content-center">
              <div class="col-lg-5 text-center">
                <figure class="avatar ms-auto me-auto mb-0 mt-2 w100">
                  <img
                    src="{{ asset('uploads/images/' ~ user.image) }}"
                    alt="image"
                    class="shadow-sm rounded-3 w-100"
                  />
                </figure>
                <h2
                  class="fw-700 font-sm text-grey-900 mt-3"
                  style="margin-bottom: 20px"
                >
                  {{ user.nom }} {{ user.prenom }}
                </h2>
                {% for message in app.flashes('success') %}
                <div class="alert alert-success" style="margin-bottom: 20px">
                  {{ message }}
                </div>
                {% endfor %}
                <!-- <a href="#" class="p-3 alert-primary text-primary font-xsss fw-500 mt-2 rounded-3">Upload New Photo</a> -->
              </div>
            </div>

            {{ form_start(form) }}
            <div class="row">
              <div class="col-lg-6 mb-3">
                <div class="form-group">
                  <label class="mont-font fw-600 font-xsss">First Name</label>
                  {{
                      form_widget(form.prenom, {
                        attr: {
                          class:
                            " form-control",
                        }
                      })
                  }}
                  {% if form_errors(form.prenom) %}
                  <div class="alert alert-danger" style="font-size: 13px">
                    {{ form_errors(form.prenom) }}
                  </div>
                  {% endif %}
                </div>
              </div>

              <div class="col-lg-6 mb-3">
                <div class="form-group">
                  <label class="mont-font fw-600 font-xsss">Last Name</label>
                  {{
                      form_widget(form.nom, {
                        attr: {
                          class:
                            " form-control",
                        }
                      })
                  }}
                  {% if form_errors(form.nom) %}
                  <div class="alert alert-danger" style="font-size: 13px">
                    {{ form_errors(form.nom) }}
                  </div>
                  {% endif %}
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12 mb-3">
                <div class="form-group">
                  <label class="mont-font fw-600 font-xsss">Email</label>
                  {{
                    form_widget(form.email, {
                      attr: {
                        class: "form-control",
                      }
                    })
                  }}
                  {% if form_errors(form.email) %}
                  <div class="alert alert-danger" style="font-size: 13px">
                    {{ form_errors(form.email) }}
                  </div>
                  {% endif %}
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-6 mb-3">
                <div class="form-group">
                  <label class="mont-font fw-600 font-xsss">Address</label>
                  {{
                      form_widget(form.adresse, {
                        attr: {
                          class:
                            " form-control",
                        }
                      })
                  }}
                </div>
              </div>

              <div class="col-lg-6 mb-3">
                <div class="form-group">
                  <label class="mont-font fw-600 font-xsss">Phone</label>
                  {{
                      form_widget(form.telephone, {
                        attr: {
                          class:
                            " form-control",
                        }
                      })
                  }}
                  {% if form_errors(form.telephone) %}
                  <div class="alert alert-danger" style="font-size: 13px">
                    {{ form_errors(form.telephone) }}
                  </div>
                  {% endif %}
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12 mb-3">
                <div class="form-group">
                  <label class="mont-font fw-600 font-xsss">Bio</label>
                  {{
                      form_widget(form.bio, {
                        attr: {
                          class:
                            " form-control",
                        }
                      })
                  }}
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12 mb-3">
                <div class="card mt-3 border-0">
                  <div
                    class="card-body d-flex justify-content-between align-items-end p-0"
                  >
                    <div class="form-group mb-0 w-100">
                      {{ form_widget(form.image) }}
                      <label
                        for="user_image"
                        class="rounded-3 text-center bg-white btn-tertiary js-labelFile p-4 w-100 border-dashed"
                      >
                        <i class="ti-cloud-down large-icon me-3 d-block"></i>
                        <span class="js-fileName"
                          >Drag and drop or click to replace</span
                        >
                      </label>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-lg-12 mb-3">
                <label class="mont-font fw-600 font-xsss">Description</label>
                {{ form_widget(form.description) }}
              </div>

              <div class="col-lg-12">
                <button
                  class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-3 d-inline-block"
                  type="submit"
                >
                  Save
                </button>
              </div>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
        <!-- <div class="card w-100 border-0 p-2"></div> -->
      </div>
    </div>
  </div>
</div>
{% endblock %}
