{% extends 'base.html.twig' %}

{% block title %}RecyclagePoint index{% endblock %}

{% block body %}
    <h1>RecyclagePoint index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>MaxCapacite</th>
                <th>Adresse</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recyclage_point in recyclage_points %}
