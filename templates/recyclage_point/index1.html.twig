                <td>{{ recyclage_point.MaxCapacite }}</td>
                <td>{{ recyclage_point.adresse }}</td>
                <td>{{ recyclage_point.Longitude }}</td>
                <td>{{ recyclage_point.Latitude }}</td>
                <td>
                    <a href="{{ path('app_recyclage_point_show', {'id': recyclage_point.id}) }}">show</a>
                    <a href="{{ path('app_recyclage_point_edit', {'id': recyclage_point.id}) }}">edit</a>
                </td>
            </tr>
