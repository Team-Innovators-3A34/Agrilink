{% extends 'base.html.twig' %} {% block body %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Elomoas - Online Course and LMS HTML Template</title>

    <link rel="stylesheet" href="css/themify-icons.css" />
    <link rel="stylesheet" href="css/feather.css" />
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png" />
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    <style>
      .text-danger {
        color: #e74c3c;
        font-size: 14px;
        margin-top: 5px;
      }
    </style>
  </head>

  <body class="color-theme-blue">
    <div class="preloader"></div>

    <div class="main-wrap">
      <div class="row">
        <div
          class="col-xl-6 d-none d-xl-block p-0 vh-100 bg-image-cover bg-no-repeat"
          style="background-image: url(images/signup_bg.png)"
        ></div>

        <div
          class="col-xl-6 vh-100 align-items-center d-flex bg-white rounded-3 overflow-hidden"
        >
          <div class="card shadow-none border-0 ms-auto me-auto login-card">
            <div style="text-align: left; padding-left: 20px">
              <img
                src="images/logo_agrilink.png"
                alt="Agrilink Logo"
                style="
                  max-width: 75px;
                  height: auto;
                  border-radius: 50%;
                  margin-left: -250px;
                "
              />
            </div>
            <div
              class="card-body rounded-0 text-left"
              style="margin-left: -120px"
            >
              {{ form_errors(form) }}

              <h2 class="fw-700 display1-size display2-md-size mb-4">
                Create your account
              </h2>
              <h4 class="fw-500 text-grey-500 mb-4">
                Join our platform to be part of a network of modern and
                sustainable agriculture.
              </h4>
              {{ form_start(form) }}
              <div class="form-group icon-input mb-4 d-flex">
                <div class="me-2 w-100">
                  <i class="font-sm ti-user text-grey-500 pe-0"></i>
                  {{
                    form_widget(form.prenom, {
                      attr: {
                        class:
                          "style2-input ps-5 form-control text-grey-900 font-xsss fw-600",
                        placeholder: "Your First Name"
                      }
                    })
                  }}
                  {% if form_errors(form.prenom) %}
                  <div class="text-danger font-xsss mt-2">
                    {{ form_errors(form.prenom) }}
                  </div>
                  {% endif %}
                </div>
                <div class="w-100 form-group icon-input mb-3">
                  <i class="font-sm ti-user text-grey-500 pe-0"></i>
                  {{
                    form_widget(form.nom, {
                      attr: {
                        class:
                          "style2-input ps-5 form-control text-grey-900 font-xsss fw-600",
                        placeholder: "Your Last Name"
                      }
                    })
                  }}
                  {% if form_errors(form.nom) %}
                  <div class="text-danger font-xsss mt-2">
                    {{ form_errors(form.nom) }}
                  </div>
                  {% endif %}
                </div>
              </div>

              <div class="form-group icon-input mb-3 d-flex">
                <div class="me-2 w-100">
                  <i class="font-sm ti-location-pin text-grey-500 pe-0"></i>
                  {{
                    form_widget(form.adresse, {
                      attr: {
                        class:
                          "style2-input ps-5 form-control text-grey-900 font-xsss fw-600",
                        placeholder: "Your Address"
                      }
                    })
                  }}
                </div>
                <div class="w-100 form-group icon-input mb-3">
                  <i class="font-sm ti-mobile text-grey-500 pe-0"></i>
                  {{
                    form_widget(form.telephone, {
                      attr: {
                        class:
                          "style2-input ps-5 form-control text-grey-900 font-xsss fw-600",
                        placeholder: "Phone Number"
                      }
                    })
                  }}
                  {% if form_errors(form.telephone) %}
                  <div class="text-danger font-xsss mt-2">
                    {{ form_errors(form.telephone) }}
                  </div>
                  {% endif %}
                </div>
              </div>

              <div class="form-group icon-input mb-3">
                <i class="font-sm ti-email text-grey-500 pe-0"></i>
                {{
                  form_widget(form.email, {
                    attr: {
                      class:
                        "style2-input ps-5 form-control text-grey-900 font-xsss fw-600",
                      placeholder: "Your Email Address"
                    }
                  })
                }}
                {% if form_errors(form.email) %}
                <div class="alert alert-danger" style="font-size: 13px">
                  {{ form_errors(form.email) }}
                </div>
                {% endif %}
              </div>
              <div class="me-2 w-50">
                {{ form_widget(form.captcha) }}
              </div>
              <div class="form-group icon-input mb-3 d-flex">
                <div class="me-2 w-50">
                  {{
                    form_widget(form.plainPassword, {
                      attr: {
                        type: "password",
                        class:
                          "style2-input ps-5 form-control text-grey-900 font-xss ls-3",
                        placeholder: "Password"
                      }
                    })
                  }}
                  {% if form_errors(form.plainPassword) %}
                  <div
                    class="text-danger font-xsss mt-2"
                    style="font-size: 9px"
                  >
                    {{ form_errors(form.plainPassword) }}
                  </div>
                  {% endif %}

                  <i class="font-sm ti-lock text-grey-500 pe-0"></i>
                </div>
                <div class="w-50 form-group icon-input mb-3">
                  <input
                    type="password"
                    class="style2-input ps-5 form-control text-grey-900 font-xss ls-3"
                    placeholder="Confirm Password"
                  />
                  <i class="font-sm ti-lock text-grey-500 pe-0"></i>
                </div>
              </div>
              <div class="form-group icon-input mb-3">
                {{ form_widget(form.user_type) }}
              </div>
              <div class="form-check text-left mb-3">
                {{
                  form_widget(form.agreeTerms, {
                    attr: {
                      class: "form-check-input mt-2",
                      placeholder: "Select User Type"
                    }
                  })
                }}
                <label
                  class="form-check-label font-xsss text-grey-500"
                  for="exampleCheck2"
                  >Accept Term and Conditions</label
                >
              </div>

              <div class="form-group mb-1">
                {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}
                <button
                  type="submit"
                  class="form-control text-center style2-input text-white fw-600 bg-dark border-0 p-0"
                >
                  Register
                </button>
              </div>
              {{ form_end(form) }}
              <div class="form-group icon-input mb-3"></div>

              <div class="col-sm-12 p-0 text-left">
                <h6
                  class="text-grey-500 font-xsss fw-500 mt-0 mb-0 lh-32 text-center"
                >
                  Already have account
                  <a href="{{ path('app_login') }}">Login</a>
                </h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="js/plugin.js"></script>
    <script src="js/scripts.js"></script>
  </body>
</html>
{% endblock %}
