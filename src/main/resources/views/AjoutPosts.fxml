<?import javafx.scene.layout.Background?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="600" prefHeight="750" style="-fx-background-color: #f0f4f8;">
    <VBox spacing="20" layoutX="50" layoutY="30" prefWidth="500">

        <!-- Top bar -->
        <Label text="Ajouter ou Modifier une Publication" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 15;" maxWidth="Infinity">
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
            <background>
                <Background>
                    <BackgroundFill fill="#005eff" />
                </Background>
            </background>
        </Label>

        <!-- Title -->
        <TextField promptText="Enter title" fx:id="titleField"/>

        <!-- Type -->
        <TextField promptText="Type" fx:id="typeField"/>

        <!-- Conseil agricole -->
        <VBox spacing="10" style="-fx-border-color: lightgray; -fx-border-radius: 5; -fx-padding: 10;">
            <Label text="Conseil agricole du jour" style="-fx-font-weight: bold;" />
            <Label text="Envisagez la plantation complémentaire pour éloigner naturellement les parasites." wrapText="true" fx:id="conseilLabel" />
            <HBox spacing="10">
                <Button text="Générer un nouveau conseil" style="-fx-background-color: #6a0dad; -fx-text-fill: white;"/>
                <Button text="Je ne veux pas de conseil" style="-fx-background-color: red; -fx-text-fill: white;" />
            </HBox>
        </VBox>

        <!-- Description -->
        <TextArea promptText="Description" fx:id="descriptionField" prefRowCount="3"/>

        <!-- Status -->
        <TextField promptText="Status" fx:id="statusField"/>

        <!-- Image -->
        <TextField promptText="Images" fx:id="imageField"/>

        <!-- (Optional) Submit button -->
        <Button text="Soumettre" style="-fx-background-color: #005eff; -fx-text-fill: white;" maxWidth="Infinity" />
    </VBox>
</AnchorPane>
